- unless @group_labels.blank?
	- @group_labels.each do |gl|
		- checkIt = @item_label_ids.include?(gl.id) if @item_label_ids
		=check_box_tag "curr_label_ids[#{gl.id}]", true, checkIt 
		=label_tag "curr_label_ids[#{gl.id}]", gl.name
		&nbsp;&nbsp;

	- if @item_label_ids
		- @item_label_ids.each do |id|
			=hidden_field_tag "prev_label_ids[#{id}]", id
- else
	No Labels exist for the selected Group - add some!
